generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String
  name          String
  bio           String?
  timezone      String?
  avatarUrl     String?
  createdAt     DateTime @default(now())
  phases        Phase[]
}

model Phase {
  id            String   @id @default(uuid())
  userId        String
  name          String
  durationDays  Int
  startDate     DateTime
  endDate       DateTime
  why           String
  outcome       String
  isActive      Boolean  @default(true)
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  createdAt     DateTime @default(now())
  completedAt   DateTime?

  routineBlocks RoutineBlock[]
  executions    RoutineExecution[]
  timesheets    TimesheetEntry[]

  user          User     @relation(fields: [userId], references: [id])
  @@index([userId, isActive])
}

model Category {
  id        String   @id @default(uuid())
  name      String
  userId    String
  blocks    RoutineBlock[]
  @@unique([name, userId])
}

model RoutineBlock {
  id          String   @id @default(uuid())
  phaseId     String
  categoryId  String
  title       String
  note        String?
  startTime   String
  endTime     String
  isTemplate  Boolean
  date        DateTime?
  createdAt  DateTime @default(now())

  phase      Phase    @relation(fields: [phaseId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
  executions RoutineExecution[]
}

model RoutineExecution {
  id             String   @id @default(uuid())
  routineBlockId String
  phaseId        String
  date           DateTime
  status         ExecutionStatus
  createdAt      DateTime @default(now())

  routineBlock   RoutineBlock @relation(fields: [routineBlockId], references: [id])
  phase          Phase        @relation(fields: [phaseId], references: [id])

  @@unique([routineBlockId, date])
}

model TimesheetEntry {
  id         String   @id @default(uuid())
  phaseId    String
  title      String
  note       String?
  startTime  String
  endTime    String
  priority   Priority
  date       DateTime
  createdAt  DateTime @default(now())

  phase      Phase    @relation(fields: [phaseId], references: [id])
}

enum ExecutionStatus {
  DONE
  SKIPPED
}

enum Priority {
  HIGH
  MEDIUM
  LOW
}
